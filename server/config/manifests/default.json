{
  "server": {
    "app": {
      "slogan": "Poseidon",
      "options": {
        "services": "server/config/services/default.json",
        "apiIndex": "lib/api"
      }
    }
  },
  "connections": [
    {
      "host": "127.0.0.1",
      "port": 8000,
      "labels": ["hellofood-exp-r1"]
    }
  ],
  "plugins": {
    "inert": {
      "etagsCacheMaxSize": 1000
    },
    "vision": {},
    "hapi-auth-cookie": {},
    "hapi-safe-stop": {},
    "hapi-locale":{
      "configFile": "server/config/i18n.json",
      "order": ["params", "query", "cookie", "headers"],
      "scan": {
        "directories" : false
      }
    },
    "template-views-loader": {
      "webnodes": {
        "path": "webnodes"
      },
      "views": {
        "commonPath": "layouts/hellofood-exp-r1/views",
        "commonLayout": "layouts/hellofood-exp-r1/views/layout",
        "commonPartials": "layouts/hellofood-exp-r1/views/partials",
        "commonHelpers": "layouts/hellofood-exp-r1/views/helpers"
      },
      "artifacts": {
        "config": "layouts/hellofood-exp-r1/config",
        "common": {
          "javascript": ["js/hellofood.common.lib.min.js", "js/hellofood.bootstrap.min.js", "js/hellofood.app.min.js"],
          "stylesheets": ["css/hellofood.app.min.css"]
        }
      },
      "debug": false
    },
    "hapi-cookies-manager": {
      "webnodes": {
        "path": "webnodes"
      },
      "debug": false
    },
    "./static-resources": {
      "prefix": "layouts/hellofood-exp-r1/src"
    },
    "./pages": {
      "baseRoute": "/"
    },
    "./homepage": {
      "baseRoute": "/"
    },
    "./contacts": {
      "baseRoute": "/contacts"
    },
    "./cities": {
      "baseRoute": "/cities"
    },
    "./geocode": {
      "baseRoute": "/geocode"
    },
    "./search": {
      "baseRoute": "/search"
    },
    "./vendors": {
      "baseRoute": "/vendors"
    },
    "./checkout": {
      "baseRoute": "/checkout"
    },
    "./account": {
      "baseRoute": "/account"
    },
    "./orders": {
      "baseRoute": "/orders"
    },
    "./promo": {
      "baseRoute": "/promotions"
    },
    "./wallet": {
      "baseRoute": "/account/wallet"
    },
    "./notifications": {
      "baseRoute": "/notifications"
    },
    "./feedback": {
      "baseRoute": "/feedback"
    },
    "./newsletter": {
      "baseRoute": "/newsletter"
    }
  }
}
